<script type="text/javascript">
    $(function() {
        var url = window.location.href;
        var params = url.split("?")[1];

        $.ajax({
            type:"post",
            dataType:"json",
            url:"/index/header",
            async:false,
            success:function(data) {
                if(data && data instanceof Array) {
                    var arr = [];
                    arr.push('<li class="active"><a href="/">首页</a></li>');
                    for(var index in data) {
                        var href = "/show/lists?forumId="+data[index]._id+"&item="+index;
                        var $element = $("<li><a href='#'>Link</a></li>");
                        $element.children().attr("href",href);
                        $element.children().text(data[index].name);
                        arr.push($element);
                    }
                    $("ul.navbar-nav").prepend(arr);
                }
            }
        });

        $("ul.navbar-nav li").each(function(i,e) {
            var href = $(this).children().attr("href").split("?")[1];
            if(params == href) {
                $(this).siblings(".active").removeClass().end().addClass("active");
            }
        })

    })
</script>
